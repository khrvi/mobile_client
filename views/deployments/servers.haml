%h1
  %a{:href => "/api/deployments"} Deployments
  %span >
  %a{:href => @deployment.href }= @deployment.name
  %span > Servers
.scrollable_list.inputs
  - @results.each do |result|
    %p
      %b
        %span
          = result.name
          %a{:href => result.href, :rel=>"nofollow", :'data-method' => "delete", :'data-confirm' => "Are you sure?"} terminate
%br
%form{:action => @deployment.href + "/servers", :method => :post}
  %label{:for => "name"} Server name:
  %input{:type => "textbox", :name => "name", :id => "name"}
  %input{:type => "submit", :value => "Add Server"}
